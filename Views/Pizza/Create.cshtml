@{
    Layout = "Layout/_LayoutSenzaFooter";
}
@{
    ViewData["Title"] = "Inserisci una nuova pizza";
}

@model Pizza


<link rel="stylesheet" href="~/css/pizzaIndex.css" asp-append-version="true" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">

            <h1>Inserisci una nuova pizza</h1>

            <form asp-controller="Pizza" asp-action="Create" method="post" >

                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <strong>Nome pizza: </strong>
                    <input asp-for="Name" class="d-block w-100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </form>
           

        </div>
    </div>
</div>






















